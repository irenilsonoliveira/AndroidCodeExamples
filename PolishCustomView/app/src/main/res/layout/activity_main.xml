<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.polishcustomview.view.BannerCustomView
        android:id="@+id/banner_custom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/string_banner_title_custom" />

    <com.example.polishcustomview.view.BannerCustomView
        android:id="@+id/banner_custom_view_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/string_banner_title" />

</LinearLayout>